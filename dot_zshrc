# ─────────────────────────────────────────────────────────────
# 🔧 Functions
# ─────────────────────────────────────────────────────────────
autoload -Uz zmv

function md() {
  [[ $# == 1 ]] && mkdir -p -- "$1" && cd -- "$1"
}
compdef _directories md

function y() {
  local tmp="$(mktemp -t "yazi-cwd.XXXXXX")" cwd
  yazi "$@" --cwd-file="$tmp"
  if cwd="$(<"$tmp")" && [[ -n $cwd && $cwd != "$PWD" ]]; then
    cd "$cwd"
  fi
  rm -f "$tmp"
}

function p() {
  echo -e "
\e[38;5;99m██████╗ ███████╗████████╗ ██████╗██╗  ██╗██╗  ██╗\e[0m
\e[38;5;99m██╔══██╗██╔════╝╚══██╔══╝██╔════╝██║  ██║╚██╗██╔╝\e[0m
\e[38;5;99m██████╔╝█████╗     ██║   ██║     ███████║ ╚███╔╝ \e[0m
\e[38;5;99m██╔═══╝ ██╔══╝     ██║   ██║     ██╔══██║ ██╔██╗ \e[0m
\e[38;5;99m██║     ███████╗   ██║   ╚██████╗██║  ██║██╔╝ ██╗\e[0m
\e[38;5;99m╚═╝     ╚══════╝   ╚═╝    ╚═════╝╚═╝  ╚═╝╚═╝  ╚═╝\e[0m"
  echo -e "\n\e[38;5;99mIP -❯ \e[0m$(ip)"
  echo -e "\e[38;5;99mPrimary -❯ \e[0m${primary}\n"
}

